<tr>
  <td>
    <%= image_tag product[0].image.tiny.url %>
  </td>
  <td>
    <h4><%= product[0].name %></h4>
    <br>
    <p><%= product[0].description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol product[0].price %>
  </td>
  <td>
    <div>
    <%= quantity %>
    </div>
  </td>
  <td>
    <%= humanized_money_with_symbol product[0].price * quantity %>
  </td>
</tr>

